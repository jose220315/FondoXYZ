<h2 style="text-align: center; color: #fc4646;">Consultar Disponibilidad</h2>

<form method="post" style="text-align: center; margin-bottom: 20px;">
    <label for="fechaInicio" style="font-weight: bold;">Fecha Inicio:</label>
    <input type="date" name="fechaInicio" required style="padding: 8px; margin: 5px;" />
    <label for="fechaFin" style="font-weight: bold;">Fecha Fin:</label>
    <input type="date" name="fechaFin" required style="padding: 8px; margin: 5px;" />
    <br /><br />
    <button type="submit" style="background-color: #fc4646; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Consultar</button>
</form>

@if (ViewBag.Resultado != null)
{
    <h3 style="color: #fc4646; text-align: center;">Alojamientos disponibles:</h3>
    <table border="1" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
        <thead style="background-color: #fc4646; color: white;">
            <tr>
                <th style="padding: 10px;">Nombre</th>
                <th style="padding: 10px;">Capacidad</th>
                <th style="padding: 10px;">Número de Habitaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Resultado)
            {
                <tr>
                    <td style="padding: 8px; text-align: center;">@item.Nombre</td>
                    <td style="padding: 8px; text-align: center;">@item.Capacidad</td>
                    <td style="padding: 8px; text-align: center;">@item.NumHabitaciones</td>
                </tr>
            }
        </tbody>
    </table>
}
